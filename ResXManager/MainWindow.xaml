<Window
    x:Class="tomenglertde.ResXManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:toms="urn:TomsToolbox"
    xmlns:infrastructure="urn:ResXManager.Infrastructure"
    xmlns:styles="urn:ResXManager.Styles"
    xmlns:resx="clr-namespace:tomenglertde.ResXManager.Properties"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="700"
    Title="{x:Static resx:Resources.AppTitle}"
    Height="1024"
    Width="1200"
    Style="{DynamicResource {x:Static styles:ResourceKeys.WindowStyle}}">

    <ContentControl>
        <i:Interaction.Behaviors>
            <toms:ContentControlCompositionBehavior
                RegionId="{x:Static infrastructure:RegionId.Main}" />
        </i:Interaction.Behaviors>
    </ContentControl>
</Window>
